@using byteCrazy.Models


<style>
    .swiper-slide img {
        width: 100%;
        height: 100%;
    }

    .text-card-large {
        width: 100%;
        height: 100%;
        font-family: "Open Sans Bold, sans-serif, arial, verdana";
        font-size: 48px;
        color: #8A6649;
        font-weight: bold;

        div {
        width: 100%;
        height: 100%;
        }

        img {
            object-fit: cover;
        }
    }
    

    .front-text-card {
        position: absolute;
    }

    .front-text-underlay {
        position: absolute;
        background-color: #E6E1DC;
        opacity: 0.3;
    }

    .mySwiper {
    }

    .card-item {
        width: 340px;
        border-radius: 5px;
        height: 147px;
        margin-bottom: 10px;
        background-size: cover;
        position: relative;
        overflow: hidden;
        cursor: pointer;
        transition-duration: 0.5s;
    }

        .card-item p {
            position: absolute;
            bottom: -10px;
            background: rgb(0, 0, 0, 0.6);
            color: white;
            width: 100%;
            line-height: 33px;
            padding: 0 2%;
            font-size: 18px;
        }

    .card-box-2 {
        overflow: auto;
        margin-top: 24px;
        margin-bottom: 20px;
    }

    .card-box-2 .card-item {
        margin-right: 20px;
        display: inline-block;
    }

    .card-box-3 {
        display: flex;
        width: 1440px;
    }


    .card-item:hover {
        transform: scale(1.01); /* 鼠标悬浮时放大1.1倍 */
    }

    .swiper-pagination {
        bottom: 20px !important;
    }

    .to-box {
        display: flex;
        justify-content: space-between;
    }

    .swiper {
        width: 780px;
        height: 460px;
    }
</style>
<link rel="stylesheet" href="https://cunchu.site/temp/byteCrazy/swiper-bundle.min.css" />
<!-- Swiper JS -->
